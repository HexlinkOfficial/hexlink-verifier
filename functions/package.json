{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "secrets-sync": "firebase functions:config:unset doppler && firebase functions:config:set doppler=\"$(doppler secrets download --no-file)\"",
    "deploy": "npm run secrets-sync && firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/kms": "^3.1.0",
    "asn1": "^0.2.6",
    "asn1.js": "^5.4.1",
    "crypto": "^1.0.1",
    "ethereumjs-util": "^7.1.5",
    "ethers": "^5.7.2",
    "fast-crc32c": "^2.0.0",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^4.1.1",
    "node-fetch": "^2.6.7",
    "node-html-parser": "^6.1.4",
    "oauth": "^0.10.0"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.6.2",
    "@types/oauth": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^0.2.0",
    "typescript": "^4.5.4"
  },
  "private": true
}
